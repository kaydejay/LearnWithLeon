//Write your pseduo code first!**
//celsius to farenheit

/* 
Pseudo Code
-obtain temperature in celsius (input)
-convert from celsius to farenheit
-display farenheit temperature
*/

let temperature = Number(document.querySelector('input').value)
let h1 = document.querySelector('h1')

h1.addEventListener('click', convert)

function convert (){
    console.log((temperature * (9/5)) + 32)
}

convert ()

//OR!

document.querySelector('h1').addEventListener('click', convert)

function convert (){
    let enteredVal = Number(document.querySelector('input').value)
    let temp = enteredVal * 1.8 + 32
    document.querySelector('h2').innerText = temp
}
